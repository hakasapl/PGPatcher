name: Build PGPatcher

on:
  push:
    branches:
      - main
  pull_request:
    branches:
      - main

jobs:
  build:
    runs-on: windows-2022

    steps:
    - uses: seanmiddleditch/gha-setup-vsdevenv@master

    - name: Checkout Repository
      uses: actions/checkout@v4
      with:
        submodules: true
        fetch-depth: 0

    - name: Configure PGPatcher
      run: |
        mkdir build
        cmake -B build -G Ninja -DCMAKE_TOOLCHAIN_FILE="$env:VCPKG_ROOT/scripts/buildsystems/vcpkg.cmake" -DCMAKE_INSTALL_PREFIX="install" -DCMAKE_BUILD_TYPE=RelWithDebInfo

    - name: Build PGPatcher
      run: |
        cmake -B build --target install --config RelWithDebInfo

    - name: Upload Release Artifacts
      uses: actions/upload-artifact@v4
      with:
        name: pgpatcher-release-${{ github.sha }}
        path: install

    - name: Upload Symbols
      uses: actions/upload-artifact@v4
      with:
        name: pgpatcher-symbols-${{ github.sha }}
        path: build/**/*.pdb
