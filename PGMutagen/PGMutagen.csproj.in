<Project Sdk="Microsoft.NET.Sdk">
    <PropertyGroup>
        <TargetFramework>net8.0</TargetFramework>
        <ImplicitUsings>enable</ImplicitUsings>
        <Nullable>enable</Nullable>
        <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
        <GenerateNativeExports>true</GenerateNativeExports>
        <DnneRuntimeIdentifier>win-x64</DnneRuntimeIdentifier>
        <EnableDynamicLoading>true</EnableDynamicLoading>
        <Configurations>Release;Debug</Configurations>
        <PlatformTarget>x64</PlatformTarget>
        <Platforms>x64</Platforms>

        <RestorePackagesPath>@PGMUTAGENNE_NUGET_DIR@</RestorePackagesPath>
        <BaseIntermediateOutputPath>@PGMUTAGENNE_OBJ_DIR@</BaseIntermediateOutputPath>
        <BaseOutputPath>@PGMUTAGENNE_BIN_DIR@</BaseOutputPath>
        <FlatBuffersGeneratedFolder>@PGMUTAGENNE_OBJ_DIR@/flatbuffers/PGMutagenBuffers</FlatBuffersGeneratedFolder>
    </PropertyGroup>

    <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Debug|x64'">
        <DefineConstants>$(DefineConstants);DEBUG</DefineConstants>
    </PropertyGroup>

    <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='RelWithDebInfo|AnyCPU'">
        <Optimize>true</Optimize>
        <DebugType>pdbonly</DebugType>
        <DebugSymbols>true</DebugSymbols>
    </PropertyGroup>

    <ItemGroup>
        <Compile Include="$(FlatBuffersGeneratedFolder)\*.cs" />
        <PackageReference Include="DNNE" Version="2.0.7" />
        <PackageReference Include="Google.FlatBuffers" Version="25.2.10" />
        <PackageReference Include="Lib.Harmony" Version="2.3.3" />
        <PackageReference Include="Mutagen.Bethesda.Skyrim" Version="0.51.5" />
    </ItemGroup>
</Project>
